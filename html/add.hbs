<h1>Добавить тест</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
    <div class="input-field">
        <input  id="title" type="text" name="title" class="validate" required value="{{data.title}}">
        <label for="title">Название теста</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>
    <div class="input-field">
        <input  id="price" type="number" name="price" class="validate" required min="1" value="{{data.price}}"> 
        <label for="price">Цена теста</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>
    <div class="input-field col s6">
        <input  id="img" type="text" name="img" class="validate" required value="{{data.img}}">
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Добавить курс</button>
</form>